import org.openhab.core.library.types.*
import org.openhab.core.persistence.*
import org.openhab.model.script.actions.*

rule "soundTheAlarm"
when
  Item PIR1 changed from OPEN to CLOSED
then
  sendCommand(AlarmLight, ON)
end

rule "endTheAlarm"
when
  Item PIR1 changed from CLOSED to OPEN
then
  sendCommand(AlarmLight, OFF)
end

rule "FamilyRoom1LightOff"
when
  Item Family_Room_Light_1 changed from ON to OFF
then
  executeCommandLine("sudo ~/openhab/configurations/scripts/RCSwitch.sh 4199740 1 182")
end

rule "FamilyRoom1LightOn"
when
  Item Family_Room_Light_1 changed from OFF to ON
then
  executeCommandLine("sudo ~/openhab/configurations/scripts/RCSwitch.sh 4199731 1 182")
end

